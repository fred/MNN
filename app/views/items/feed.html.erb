<% cache_expiring("feeds", 1.day) do %>
<article>

  <h3>Feeds</h3>
  <p>We provide several types of feeds in both Atom and RSS Format</p>

  <h4>All Latest News</h4>
  <ul class="feed_list">
    <li>
      <%= link_to "Atom Format (Recommended)", items_atom_path %>
      <%= link_to image_tag("rss_blue_16.png"), items_atom_path, title: "Atom", alt: "Rss" %>
    </li>
    <li>
      <%= link_to "RSS Format (Shorter)", items_rss_path %> 
      <%= link_to image_tag("icons/social/rss_16.png"), items_rss_path, title: "RSS", alt: "Rss" %>
    </li>
  </ul>
  
  <br />
  <h4>Categories Feed</h4>
  <ul class="feed_list">
    <% @site_categories.each do |category| %>
      <li>
        <%= link_to category.title, category_path(category, format: "atom") %>
        <%= link_to image_tag("icons/social/rss_16.png"), category_path(category, format: "rss"), title: "RSS" %>
        <%= link_to image_tag("rss_blue_16.png"), category_path(category, format: "atom"), title: "Atom Feed" %>
      </li>
    <% end %>
  </ul>
  
  <br />
  <h4>News by Language</h4>
  <ul class="feed_list">
    <% @site_languages.each do |language| %>
      <li>
        <%= link_to language.title, language_items_path(language, format: "atom") %>
        <%= link_to image_tag("icons/social/rss_16.png"), language_items_path(language, format: "rss"), title: "RSS" %>
        <%= link_to image_tag("rss_blue_16.png"), language_items_path(language, format: "atom"), title: "Atom Feed" %>
      </li>
    <% end %>
  </ul>
  
  <br />
  <h4>Authors</h4>
  <ul class="feed_list">
    <% AdminUser.with_articles.each do |author| %>
      <li>
        <%= link_to author.public_display_name, author_path(author, format: "atom") %>
        <%= link_to image_tag("icons/social/rss_16.png"), author_path(author, format: "rss"), title: "RSS" %>
        <%= link_to image_tag("rss_blue_16.png"), author_path(author, format: "atom"), title: "Atom Feed" %>
      </li>
    <% end %>
  </ul>
  
  <br />
  <h4>News by Region</h4>
  <ul class="feed_list">
    <% @site_region_tags.all.each do |tag| %>
      <li>
        <%= link_to tag.title, tag_path(tag, format: "atom") %>
        <%= link_to image_tag("icons/social/rss_16.png"), tag_path(tag, format: "rss"), title: "RSS" %>
        <%= link_to image_tag("rss_blue_16.png"), tag_path(tag, format: "atom"), title: "Atom Feed" %>
      </li>
    <% end %>
  </ul>
  
  <br />
  <h4>News by Tags</h4>
  <ul class="feed_list">
    <% @site_general_tags.all.each do |tag| %>
      <li>
        <%= link_to tag.title, tag_path(tag, format: "atom") %>
        <%= link_to image_tag("icons/social/rss_16.png"), tag_path(tag, format: "rss"), title: "RSS" %>
        <%= link_to image_tag("rss_blue_16.png"), tag_path(tag, format: "atom"), title: "Atom Feed" %>
      </li>
    <% end %>
  </ul>
  
  <br />
  <h4>News by Country</h4>
  <ul class="feed_list">
    <% @site_country_tags.all.each do |tag| %>
      <li>
        <%= link_to tag.title, tag_path(tag, format: "atom") %>
        <%= link_to image_tag("icons/social/rss_16.png"), tag_path(tag, format: "rss"), title: "RSS" %>
        <%= link_to image_tag("rss_blue_16.png"), tag_path(tag, format: "atom"), title: "Atom Feed" %>
      </li>
    <% end %>
  </ul>

</article>
<% end %>